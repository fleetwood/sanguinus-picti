-
  function recentDate(date) {
    var now = new moment();
    var then = new moment(date);
    if (now.diff(date, 'minutes') < 10) {
      return 'just now';
    }
    else if (now.diff(date, 'minutes') < 60) {
      return now.diff(date, 'minutes') + 'min ago';
    }
    else if (now.diff(date, 'hours') < 24) {
      return now.diff(date, 'hours') + 'h ago';
    }
    else if (now.diff(date, 'days') < 7) {
      return now.diff(date, 'days') + 'd ago';
    }
    return 'on ' + moment(date).format('YYYY/MM/DD'); 
  }

